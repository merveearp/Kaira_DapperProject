@model List<ResultProductDto>
@*
    _UINewArrivalComponent
*@
<section id="new-arrival" class="new-arrival product-carousel py-5 position-relative overflow-hidden">
    <div class="container">
        <div class="d-flex flex-wrap justify-content-between align-items-center mt-5 mb-3">
            <h4 class="text-uppercase">Yeni Gelenleri Keşfet</h4>
            <a href="/Product/Index" class="btn-link">Bütün Ürünleri Gör</a>
        </div>
        <div class="swiper product-swiper open-up" data-aos="zoom-out">
            <div class="swiper-wrapper d-flex">@foreach(var item in Model)
                {
                    
                <div class="swiper-slide">
                    <div class="product-item image-zoom-effect link-effect">
                        <div class="image-holder position-relative">
                            <a href="index.html">
                                <img src="@item.Image2" alt="categories" class="product-image img-fluid">
                            </a>
                           
                            <div class="product-content">
                                <h5 class="element-title text-uppercase fs-5 mt-3">
                                    <a href="/Product/ProductDetail/@item.ProductId">@item.Name</a>
                                </h5>
                           <span>@item.CategoryName</span>
                           <span>@item.WearTitle</span>
                           <span>@item.WearSubtitle</span>
                           <span>$@item.Price</span>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
            <div class="swiper-pagination"></div>
        </div>
        <div class="icon-arrow icon-arrow-left">
            <svg width="50" height="50" viewBox="0 0 24 24">
                <use xlink:href="#arrow-left"></use>
            </svg>
        </div>
        <div class="icon-arrow icon-arrow-right">
            <svg width="50" height="50" viewBox="0 0 24 24">
                <use xlink:href="#arrow-right"></use>
            </svg>
        </div>
    </div>
</section>