@model List<ResultProductDto>
@*
    _UIProductsComponent
*@

<section id="related-products-section"
         class="related-products product-carousel py-5 position-relative overflow-hidden">

    <div class="container">


        <div class="d-flex flex-wrap justify-content-between align-items-center mt-5 mb-3">
            <h4 class="text-uppercase">Sizin İçin Seçtiklerimiz</h4>
            <a href="/Product/Index" class="btn-link">
                Bütün Ürünleri İncele
            </a>
        </div>


        <div class="swiper related-products-swiper open-up" data-aos="zoom-out">
            <div class="swiper-wrapper">

                @foreach (var item in Model)
                {
                    <div class="swiper-slide">

                        <div class="product-item image-zoom-effect link-effect">
                            <div class="image-holder">

                                <a href="/Product/ProductDetail/@item.ProductId">
                                    <img src="@item.CoverImage"
                                         alt="@item.Name"
                                         class="product-image img-fluid">
                                </a>


 
                                <div class="product-content text-center mt-3">

         
                                    <a href="/Product/GetWearByProduct/@item.WearId"
                                       class="related-wear">
                                        @item.WearTitle - 
                                        
                                        @item.WearSubtitle
                                     
                                    </a>
                                  

                                    <span class="related-product-price">
                                        $@item.Price.ToString("N0")
                                    </span>
                                  

                                </div>

                            </div>
                        </div>

                    </div>
                }

            </div>

            <div class="swiper-pagination related-products-pagination"></div>
        </div>


        <div class="icon-arrow icon-arrow-left related-products-prev">
            <svg width="50" height="50" viewBox="0 0 24 24">
                <use xlink:href="#arrow-left"></use>
            </svg>
        </div>

        <div class="icon-arrow icon-arrow-right related-products-next">
            <svg width="50" height="50" viewBox="0 0 24 24">
                <use xlink:href="#arrow-right"></use>
            </svg>
        </div>

    </div>
</section>
