@model List<ResultBlogDto>
@*
    _UIBlogComponent
*@

<section class="blog py-5">
    <div class="container">

        <div class="d-flex flex-wrap justify-content-between align-items-center mt-5 mb-4">
            <h4 class="text-uppercase fw-bold">Bloglarımızı Okuyun</h4>
            <a asp-controller="Blog"
               asp-action="Index"
               class="btn-link text-decoration-none">
                Tüm Blogları İncele
            </a>
        </div>

        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <article class="post-item h-100">

                        <div class="post-image overflow-hidden rounded">
                            <a asp-controller="Blog"
                               asp-action="BlogDetail"
                               asp-route-id="@item.BlogId">
                                <img src="@item.CoverImage"
                                     alt="@item.Title"
                                     class="post-grid-image img-fluid blog-img">

                            </a>
                        </div>

                        <div class="post-content my-3">

                            <div class="post-meta text-uppercase fs-6 text-secondary mb-2">
                                <span class="post-category">@item.Subtitle</span>
                            </div>

                            <h5 class="post-title text-uppercase fw-semibold">
                                <a asp-controller="Blog"
                                   asp-action="BlogDetail"
                                   asp-route-id="@item.BlogId"
                                   class="text-dark text-decoration-none">
                                    @item.Title
                                </a>
                            </h5>

                            <p class="text-muted">
                                @(item.Description.Length > 100
                                    ? item.Description.Substring(0, 100) + "..."
                                    : item.Description)
                            </p>

                            <a asp-controller="Blog"
                               asp-action="BlogDetail"
                               asp-route-id="@item.BlogId"
                               class="btn-link text-decoration-none">
                                Devamını Oku
                            </a>

                        </div>
                    </article>
                </div>
            }

        </div>
    </div>
</section>

                                <style>

    .blog-img {
        width: 100%;
        height: 750px; /* hepsi aynı yükseklik */
        object-fit: cover; /* kırpar ama bozulmaz */
        border-radius: 12px;
    }
    .post-image {
    overflow: hidden;
    border-radius: 12px;
}

.post-image img {
    transition: transform .4s ease;
}

.post-image:hover img {
    transform: scale(1.05);
}

                                </style>