@model Kaira.WebUI.DTOs.AIDtos.AIStyleResponseDto


<section class="newsletter bg-light"
         style="background: url(images/pattern-bg.png) no-repeat;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 py-5 my-5">

                <div class="subscribe-header text-center pb-3">
                    <h3 class="section-title text-uppercase">
                        AI Stil Danışmanı
                    </h3>
                    <p class="text-muted">
                        Kombin önerisi almak için sorunu yaz
                    </p>
                </div>


                <button type="button"
                        class="btn btn-dark btn-lg text-uppercase w-100"
                        data-bs-toggle="modal"
                        data-bs-target="#aiStyleModal">
                    AI Stil Danışmanına Sor
                </button>

            </div>
        </div>
    </div>
</section>


<div class="modal fade"
     id="aiStyleModal"
     tabindex="-1"
     aria-hidden="true">

    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">AI Stil Danışmanı</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                
                <form asp-controller="Home"
                      asp-action="AskStyle"
                      method="post"
                      class="d-flex flex-column gap-3">

                    <textarea name="userMessage"
                              class="form-control form-control-lg"
                              rows="3"
                              placeholder="Bugün akşam davetim var, ne giyebilirim?"
                              required></textarea>

                    <button type="submit"
                            class="btn btn-dark btn-lg text-uppercase">
                        Sor
                    </button>
                </form>

                @if (!string.IsNullOrEmpty(Model?.Description))
                {
                    <hr />

                    <h6 class="fw-bold">@Model.Title</h6>
                    <p>@Model.Description</p>

                    <a asp-controller="Product"
                       asp-action="Index"
                       class="btn btn-outline-dark w-100">
                        Ürünlerimizi İncele
                    </a>
                }

            </div>

        </div>
    </div>
</div>
