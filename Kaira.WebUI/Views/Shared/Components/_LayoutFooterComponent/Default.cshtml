
@*
    _LayoutFooterComponent
*@


<footer id="footer" class="mt-5">
    <div class="container">
        <div class="row d-flex flex-wrap justify-content-between py-5">
            <div class="col-md-3 col-sm-6">
                <div class="footer-menu footer-menu-001">
                    @await Component.InvokeAsync("_LayoutFooterAboutComponent")
                   
                    <div class="social-links">
                        <ul class="list-unstyled d-flex flex-wrap gap-3">
                            <li>
                                <a href="#" class="text-secondary">
                                    <svg width="24" height="24" viewBox="0 0 24 24">
                                        <use xlink:href="#facebook"></use>
                                    </svg>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="text-secondary">
                                    <svg width="24" height="24" viewBox="0 0 24 24">
                                        <use xlink:href="#twitter"></use>
                                    </svg>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="text-secondary">
                                    <svg width="24" height="24" viewBox="0 0 24 24">
                                        <use xlink:href="#youtube"></use>
                                    </svg>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="text-secondary">
                                    <svg width="24" height="24" viewBox="0 0 24 24">
                                        <use xlink:href="#pinterest"></use>
                                    </svg>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="text-secondary">
                                    <svg width="24" height="24" viewBox="0 0 24 24">
                                        <use xlink:href="#instagram"></use>
                                    </svg>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="footer-menu footer-menu-002">
                    <h5 class="widget-title text-uppercase mb-4">Hızlı Linkler</h5>
                    <ul class="menu-list list-unstyled text-uppercase border-animation-left fs-6">
                        <li class="menu-item">
                            <a asp-controller="Home" asp-action="Index" class="item-anchor">Anasayfa</a>
                        </li>
                        <li class="menu-item">
                            <a asp-controller="About" asp-action="Index" class="item-anchor">Hakkımızda</a>
                        </li>
                        <li class="menu-item">
                            <a asp-controller="Blog" asp-action="Index" class="item-anchor">Blog</a>
                        </li>
                        
                        <li class="menu-item">
                            <a asp-controller="FAQ" asp-action="Index" class="item-anchor">Sıkça Sorulanlar</a>
                        </li>
                    </ul>
                </div>
            </div>
            
            @await Component.InvokeAsync("_LayoutFooterContactComponent")
            
        </div>

    </div>
    <div class="border-top py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 d-flex flex-wrap">
                    <div class="shipping">
                        <span>We ship with:</span>
                        <img src="~/images/arct-icon.png" alt="icon">
                        <img src="~/images/dhl-logo.png" alt="icon">
                    </div>
                    <div class="payment-option">
                        <span>Payment Option:</span>
                        <img src="~/images/visa-card.png" alt="card">
                        <img src="~/images/paypal-card.png" alt="card">
                        <img src="~/images/master-card.png" alt="card">
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <p>
                        © 2022 Kaira. Tüm hakları saklıdır.
                        Proje Geliştiricisi:
                        <a href="https://github.com/merveearp" target="_blank">
                            Merve Türk
                        </a>
                    </p>

                </div>
            </div>
        </div>
    </div>
</footer>