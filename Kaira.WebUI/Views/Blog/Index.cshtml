@model List<ResultBlogDto>

@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="kaira-blog-index py-5">
    <div class="container">

      
        <div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-3">

            <a asp-controller="Home"
               asp-action="Index"
               class="back-home-btn">
                ← Anasayfaya Dön
            </a>

            <div class="text-center flex-grow-1">
                <h2 class="blog-title mb-2">Bloglarımızı Keşfedin</h2>
                <p class="blog-subtitle mb-0">
                    Moda, stil ve ilham dolu yazılarımızla KAIRA dünyasına adım atın
                </p>
            </div>

           
            <div style="width:140px"></div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-5">
                    <article class="blog-card">

                        <div class="blog-image">
                            <a asp-controller="Blog"
                               asp-action="BlogDetail"
                               asp-route-id="@item.BlogId">
                                <img src="@item.CoverImage"
                                     alt="@item.Title"
                                     class="img-fluid">
                            </a>
                        </div>

                        <div class="blog-content">

                            <span class="blog-category">
                                @item.Subtitle
                            </span>

                            <h4 class="blog-card-title">
                                <a asp-controller="Blog"
                                   asp-action="BlogDetail"
                                   asp-route-id="@item.BlogId">
                                    @item.Title
                                </a>
                            </h4>

                            <p class="blog-description">
                                @(item.Description.Length > 140
                                                            ? item.Description.Substring(0, 140) + "..."
                                                            : item.Description)
                            </p>

                            <a asp-controller="Blog"
                               asp-action="BlogDetail"
                               asp-route-id="@item.BlogId"
                               class="read-more">
                                Devamını Oku →
                            </a>

                        </div>

                    </article>
                </div>
            }
        </div>

    </div>
</section>
