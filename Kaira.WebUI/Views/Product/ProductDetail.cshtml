@model ResultProductDto

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="kaira-product-detail py-5">

    <!-- Top buttons -->
    <div class="container mb-4">
        <div class="d-flex justify-content-between">
            <a href="javascript:history.back()" class="btn btn-outline-dark btn-sm">
                ← Geri Dön
            </a>
            <a href="/" class="btn btn-dark btn-sm">
                Ana Sayfa
            </a>
        </div>
    </div>

    <div class="container">
        <div class="row g-5">

           

            <div class="col-lg-5">

                <div class="product-image-stack">

                    <img src="@Model.CoverImage" alt="@Model.Name" />

                    @if (!string.IsNullOrEmpty(Model.Image1))
                    {
                        <img src="@Model.Image1" alt="@Model.Name" />
                    }

                    @if (!string.IsNullOrEmpty(Model.Image2))
                    {
                        <img src="@Model.Image2" alt="@Model.Name" />
                    }

                </div>

            </div>

           
            <div class="col-lg-7">

                <div class="product-detail-content">

                    <h2 class="product-title">
                        @Model.Name
                    </h2>

                    <div class="product-price mb-3">
                        ₺@Model.Price.ToString("N0")
                    </div>

                    <div class="wear-info mb-3">
                        <strong class="wear-title">@Model.WearTitle</strong>
                        <div class="wear-subtitle">
                            @Model.WearSubtitle
                        </div>
                    </div>

                    <div class="mb-3">
                        <span class="category-badge">
                            @Model.CategoryName
                        </span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="product-description">
                            @Model.Description
                        </p>
                    }


                    @if (Model.IsActive)
                    {
                        <div class="stock-status in-stock">
                            ✔ Stokta
                        </div>
                    }
                    else
                    {
                        <div class="stock-status out-of-stock">
                            ✖ Şu an stokta yok
                        </div>
                    }

                </div>

            </div>

        </div>
    </div>

</section>
