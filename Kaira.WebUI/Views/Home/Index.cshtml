@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Component.InvokeAsync("_UIHeroSliderComponent")

@await Component.InvokeAsync("_UIBilboardComponent")

@await Component.InvokeAsync("_UIFeatureComponent")

@await Component.InvokeAsync("_UICategoriesComponent")

@await Component.InvokeAsync("_UINewArrivalComponent")

@await Component.InvokeAsync("_UICollectionComponent")

@await Component.InvokeAsync("_UIBestSellersComponent")

@await Component.InvokeAsync("_UIVideoComponent")

@await Component.InvokeAsync("_UITestimonialComponent")

@await Component.InvokeAsync("_UIProductsComponent")

@await Component.InvokeAsync("_UIBlogComponent")

@await Component.InvokeAsync("_UILogoComponent")

@model Kaira.WebUI.DTOs.AIDtos.AIStyleResponseDto

@await Component.InvokeAsync("_UIAIChatComponent", new { model = Model })

@await Component.InvokeAsync("_UICoverImageComponent")


@if (ViewBag.OpenModal == true)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var modal = new bootstrap.Modal(
                document.getElementById('aiStyleModal')
            );
            modal.show();
        });
    </script>
}
