
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@await Component.InvokeAsync("_AdminRecentBlogComponent")
<br />

<div class="grid grid-cols-12 gap-x-6">
    <div class="col-span-12 xl:col-span-4">
        <div class="stats-card stats-card-blue">
            <div class="stats-icon">
                <i class="fas fa-tshirt"></i>
            </div>
            <div class="stats-content">
                <h3 class="stats-number">@ViewBag.CountWear</h3>
                <p class="stats-label">İçerik Sayısı</p>
            </div>
        </div>
    </div>

    <div class="col-span-12 xl:col-span-4 md:col-span-6">
        <div class="stats-card stats-card-purple">
            <div class="stats-icon">
                <i class="fas fa-box-open"></i>
            </div>
            <div class="stats-content">
                <h3 class="stats-number">@ViewBag.CountCategory</h3>
                <p class="stats-label">Kategori Sayısı</p>
            </div>
        </div>
    </div>

    <div class="col-span-12 xl:col-span-4 md:col-span-6">
        <div class="stats-card stats-card-green">
            <div class="stats-icon">
                <i class="fas fa-shopping-bag"></i>
            </div>
            <div class="stats-content">
                <h3 class="stats-number">@ViewBag.CountProduct</h3>
                <p class="stats-label">Ürün Sayısı</p>
            </div>
        </div>
    </div>

    
    @await Component.InvokeAsync("_AdminRecentProductComponent")
</div>