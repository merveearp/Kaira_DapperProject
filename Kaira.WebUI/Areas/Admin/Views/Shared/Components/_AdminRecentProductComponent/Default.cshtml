<div class="col-span-12 xl:col-span-6 md:col-span-12">
   
    <div class="card table-card shadow-sm rounded-4 border-0">

        <div class="card-header d-flex justify-content-between align-items-center bg-white border-0 pb-2">
            <h5 class="fw-semibold mb-0">🆕 Son Eklenen Ürünler</h5>
        </div>

        <div class="card-body pt-2">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                               
                                <td class="text-center">
                                    <img src="@item.CoverImage"
                                         class="rounded-3 shadow-sm"
                                         style="width:50px;height:50px;object-fit:cover;"
                                         alt="product" />
                                </td>

                               
                                <td>
                                    <h6 class="mb-1 fw-semibold">@item.Name</h6>
                                    <small class="text-muted">@item.CategoryName</small>
                                </td>

                               
                                <td>
                                    <h6 class="mb-1">@item.WearTitle</h6>
                                    <small class="text-muted">@item.WearSubtitle</small>
                                </td>

                               
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success-subtle text-success px-3 py-2 rounded-pill">
                                            ● Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-subtle text-danger px-3 py-2 rounded-pill">
                                            ● Pasif
                                        </span>
                                    }
                                </td>

                               
                                <td class="text-end">
                                    <a asp-area="Admin"
                                       asp-controller="Product"
                                       asp-action="UpdateProduct"
                                       asp-route-id="@item.ProductId"
                                       class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        Düzenle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
