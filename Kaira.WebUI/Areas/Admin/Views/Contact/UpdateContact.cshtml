@model UpdateContactDto

@{
    ViewData["Title"] = "İletişim Bilgileri Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-heading mb-4">
    <h3 class="fw-bold">İletişim Bilgileri Güncelle</h3>
    <p class="text-muted mb-0">
        Web sitesinde görünen iletişim bilgilerini düzenleyin
    </p>
</div>

<div class="row justify-content-center">
    <div class="col-xl-9 col-lg-10 col-md-12">

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">

                <form method="post">

                    <input type="hidden" asp-for="ContactId" />

                    <div class="mb-4 d-flex align-items-start gap-3">
                        <div class="icon-box bg-light text-primary">
                            <i class="bi bi-geo-alt-fill"></i>
                        </div>

                        <div class="flex-grow-1">
                            <label class="form-label fw-semibold">Adres</label>
                            <input asp-for="Address"
                                   class="form-control"
                                   placeholder="Adres bilgisini giriniz" />
                            <span asp-validation-for="Address"
                                  class="text-danger small"></span>
                        </div>
                    </div>


                    <div class="mb-4 d-flex align-items-start gap-3">
                        <div class="icon-box bg-light text-success">
                            <i class="bi bi-telephone-fill"></i>
                        </div>

                        <div class="flex-grow-1">
                            <label class="form-label fw-semibold">Telefon</label>
                            <input asp-for="PhoneNumber"
                                   class="form-control"
                                   placeholder="+90 5xx xxx xx xx" />
                            <span asp-validation-for="PhoneNumber"
                                  class="text-danger small"></span>
                        </div>
                    </div>


                    <div class="mb-4 d-flex align-items-start gap-3">
                        <div class="icon-box bg-light text-danger">
                            <i class="bi bi-envelope-fill"></i>
                        </div>

                        <div class="flex-grow-1">
                            <label class="form-label fw-semibold">E-Posta</label>
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control"
                                   placeholder="info@kairafashion.com" />
                            <span asp-validation-for="Email"
                                  class="text-danger small"></span>
                        </div>
                    </div>

                   
                    <div class="mb-4 d-flex align-items-start gap-3">
                        <div class="icon-box bg-light text-warning">
                            <i class="bi bi-info-circle-fill"></i>
                        </div>

                        <div class="flex-grow-1">
                            <label class="form-label fw-semibold">Bilgi</label>
                            <textarea asp-for="Info"
                                      rows="3"
                                      class="form-control"
                                      placeholder="Kısa bilgilendirme metni..."></textarea>
                            <span asp-validation-for="Info"
                                  class="text-danger small"></span>
                        </div>
                    </div>

                    <hr class="my-4" />


                    <div class="d-flex justify-content-end gap-2">
                        <a asp-area="Admin"
                           asp-controller="Contact"
                           asp-action="Index"
                           class="btn btn-light-danger px-4">
                            İptal
                        </a>

                        <button type="submit"
                                class="btn btn-light-primary px-4">
                            <i class="bi bi-save me-1"></i>
                            Kaydet
                        </button>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

<style>
    .icon-box {
        width: 54px;
        height: 54px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        flex-shrink: 0;
    }
</style>
