@model UpdateBannerDto

@{
    ViewData["Title"] = "Ana Vitrin Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-heading mb-4 d-flex align-items-center justify-content-between">
    <div>
        <h3 class="fw-bold mb-1">Ana Vitrin Güncelle</h3>
        <p class="text-muted mb-0">
            Ana vitrinde görünen başlık ve açıklamayı düzenleyin
        </p>
    </div>

    <span class="badge bg-primary-subtle text-primary px-3 py-2">
        <i class="bi bi-stars me-1"></i> Vitrin Alanı
    </span>
</div>

<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-9 col-md-11">

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">

                <form method="post">

                   
                    <input type="hidden" asp-for="BannerId" />

                   
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            Vitrin Başlığı
                        </label>
                        <input asp-for="Title"
                               class="form-control form-control-lg"
                               placeholder="Örn: KAIRA COLLECTION" />
                        <span asp-validation-for="Title"
                              class="text-danger small"></span>
                    </div>

                    
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            Vitrin Açıklaması
                        </label>
                        <textarea asp-for="Description"
                                  rows="4"
                                  class="form-control"
                                  placeholder="Vitrin açıklamasını giriniz..."></textarea>
                        <span asp-validation-for="Description"
                              class="text-danger small"></span>
                    </div>

                    <hr class="my-4" />

                   
                    <div class="d-flex justify-content-end gap-2">
                        <a href="/Admin/Banner/Index"
                           class="btn btn-light px-4">
                            İptal
                        </a>

                        <button type="submit"
                                class="btn btn-primary px-4">
                            <i class="bi bi-save me-1"></i>
                            Kaydet
                        </button>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>
