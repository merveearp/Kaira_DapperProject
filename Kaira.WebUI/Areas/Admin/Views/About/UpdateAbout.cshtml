@model UpdateAboutDto
@{
    ViewData["Title"] = "Hakkımızda Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-heading mb-4">
    <h3 class="fw-bold">Hakkımızda Güncelle</h3>
    <p class="text-muted mb-0">
        Web sitesinde footerde görünen Hakkımızda içeriğini düzenleyin
    </p>
</div>

<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-9 col-md-11">

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">

                <form method="post">

                   
                    <input type="hidden" asp-for="AboutId" />

                   
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            Başlık
                        </label>
                        <input asp-for="Title"
                               class="form-control"
                               placeholder="Örn: KAIRA COLLECTION" />
                        <span asp-validation-for="Title"
                              class="text-danger small"></span>
                    </div>

                   
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            Açıklama
                        </label>
                        <textarea asp-for="Description"
                                  rows="6"
                                  class="form-control"
                                  placeholder="Hakkımızda metnini giriniz..."></textarea>
                        <span asp-validation-for="Description"
                              class="text-danger small"></span>
                    </div>

                    <hr class="my-4" />

                   
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index"
                           class="btn btn-light px-4">
                            İptal
                        </a>

                        <button type="submit"
                                class="btn btn-primary px-4">
                            <i class="bi bi-save me-1"></i>
                            Kaydet
                        </button>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>
