@model UpdateAboutDto

@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-heading mb-4 d-flex align-items-center justify-content-between">
    <div>
        <h2 class="fw-bold mb-1">Hakkımızda</h2>
        <p class="text-muted mb-0">
            Web sitesinde Footer Hakkımızda alanında görünen içeriği yönetin
        </p>
    </div>

    <span class="badge bg-primary-subtle text-primary px-3 py-2">
        <i class="bi bi-info-circle me-1"></i> Kurumsal İçerik
    </span>
</div>

<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-9 col-md-11">

        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="card-body p-4">
                <img src="@Model.ImageUrl"
                     alt="@Model.Title"
                     class="img-fluid rounded">
               
                <div class="mb-3">
                    <span class="badge bg-light text-primary mb-2">
                        KAIRA
                    </span>
                    <h3 class="fw-bold mb-2">
                        @Model.Title
                    </h3>
                </div>

              
                <p class="text-muted fs-6" style="line-height: 1.9;">
                    @Model.Description
                </p>
                <p class="text-muted fs-6" style="line-height: 1.9;">
                    @Model.Text
                </p>

                <hr class="my-4" />

               
                <div class="d-flex justify-content-end">
                    <a asp-area="Admin"
                       asp-controller="About"
                       asp-action="UpdateAbout"
                       class="btn btn-warning px-4">
                        <i class="bi bi-pencil-square me-1"></i>
                        Düzenle
                    </a>
                </div>

            </div>
        </div>

    </div>
</div>
