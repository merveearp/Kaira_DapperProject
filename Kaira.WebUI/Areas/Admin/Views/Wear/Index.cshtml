@model List<ResultWearDto>
@{
    ViewData["Title"] = "İçerikler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int count = 0;
}


<div class="card border-0 shadow-sm mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">

        <div>
            <h4 class="fw-bold mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-box-seam"></i>
                Giyin İçerik Listesi
            </h4>
            <small class="text-muted">
                Tüm içeriği buradan yönetin
            </small>
        </div>

        <a asp-area="Admin"
           asp-controller="Wear"
           asp-action="CreateWear"
           class="btn btn-primary d-flex align-items-center gap-2">
            <i class="bi bi-plus-circle"></i>
            Yeni Giyim İçeriği
        </a>

    </div>
</div>


<div class="card border-0 shadow-sm">
    <div class="card-body p-0">

        <div class="table-responsive">
            <table class="table align-middle table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Görsel</th>
                        <th>İçerik</th>
                        <th>Kategori</th>
                        <th>Koleksiyon</th>
                        <th>Açıklama</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr class="@(item.IsHome ? "" : "table-inactive")">

                      
                            <td>
                                <strong>@count</strong>
                            </td>

                            <td>
                                <img src="@item.ImageUrl"
                                     class="product-image @(item.IsHome ? "" : "image-passive")"
                                     alt="@item.Title" />
                            </td>


                            <td>
                                <strong>@item.Title</strong>
                            </td>


                            <td>
                                <span class="badge bg-light text-dark">
                                    @item.CategoryName
                                </span>
                            </td>


                            <td>
                                <span class="text-muted">
                                    @item.Subtitle
                                </span>
                            </td>
                            <td>
                                <span class="text-muted">
                                    @(item.Description.Length > 100
                                                                    ? item.Description.Substring(0, 100) + "..."
                                                                    : item.Description)
                                </span>
                            </td>




                            <td>
                                @if (item.IsHome)
                                {
                                    <span class="badge bg-success">Anasayfada Gösterilsin</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Aktif Değil</span>
                                }
                            </td>


                            <td class="text-end">
                                <a asp-area="Admin"
                                   asp-controller="Wear"
                                   asp-action="UpdateWear"
                                   asp-route-id="@item.WearId"
                                   class="btn btn-sm btn-outline-warning">
                                    Düzenle
                                </a>

                                <a asp-area="Admin"
                                   asp-controller="Wear"
                                   asp-action="DeleteWear"
                                   asp-route-id="@item.WearId"
                                   class="btn btn-sm btn-outline-danger ms-1"
                                   onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>


