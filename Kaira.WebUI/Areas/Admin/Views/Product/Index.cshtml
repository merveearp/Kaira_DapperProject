@model List<ResultProductDto>

@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">

        <div>
            <h4 class="fw-bold mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-box-seam"></i>
                Ürün Listesi
            </h4>
            <small class="text-muted">
                Tüm ürünleri buradan yönetin
            </small>
        </div>

        <a asp-area="Admin"
           asp-controller="Product"
           asp-action="CreateProduct"
           class="btn btn-primary d-flex align-items-center gap-2">
            <i class="bi bi-plus-circle"></i>
            Yeni Ürün
        </a>

    </div>
</div>


<div class="card border-0 shadow-sm">
    <div class="card-body p-0">

        <div class="table-responsive">
            <table class="table align-middle table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Görsel</th>
                        <th>Ürün</th>
                        <th>Kategori</th>
                        <th>Koleksiyon</th>
                        <th>Fiyat</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.IsActive ? "" : "table-inactive")">

     
                            <td>
                                <img src="@item.CoverImage"
                                     class="product-image @(item.IsActive ? "" : "image-passive")"
                                     alt="@item.Name" />
                            </td>

         
                            <td>
                                <strong>@item.Name</strong>
                            </td>

               
                            <td>
                                <span class="badge bg-light text-dark">
                                    @item.CategoryName
                                </span>
                            </td>

     
                            <td>
                                <span class="text-muted">
                                    @item.WearTitle
                                </span>
                            </td>

       
                            <td>
                                <strong>@item.Price ₺</strong>
                            </td>

       
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Aktif Değil</span>
                                }
                            </td>

       
                            <td class="text-end">
                                <a asp-area="Admin"
                                   asp-controller="Product"
                                   asp-action="UpdateProduct"
                                   asp-route-id="@item.ProductId"
                                   class="btn btn-sm btn-outline-warning">
                                    Düzenle
                                </a>

                                <a asp-area="Admin"
                                   asp-controller="Product"
                                   asp-action="DeleteProduct"
                                   asp-route-id="@item.ProductId"
                                   class="btn btn-sm btn-outline-danger ms-1"
                                   onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
