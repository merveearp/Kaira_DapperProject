@model UpdateLogoDto
@{
    ViewData["Title"] = "UpdateLogo";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="mb-4">
    <h4 class="fw-bold">Logo Görseli Güncelle</h4>
    <p class="text-muted mb-0">
        Logo görselinin yolunu güncelleyebilirsiniz
    </p>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-4">

        <form method="post">
            <input type="hidden" asp-for="LogoId" />


            <div class="update-layout">


                <div class="update-form">

                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            Görsel Yolu
                        </label>
                        <input asp-for="ImageUrl"
                               id="logoInput"
                               class="form-control"
                               placeholder="/images/instagram/cover1.jpg" />
                        <small class="text-muted">
                            Örn: /images/instagram/cover2.jpg
                        </small>
                    </div>

                    <div class="d-flex gap-2">
                        <a href="/Admin/Logo/Index"
                           class="btn btn-light-danger">
                            İptal
                        </a>
                        <button type="submit"
                                class="btn btn-light-primary">
                            Güncelle
                        </button>
                    </div>

                </div>


                <div class="update-preview">
                    <div class="image-preview-box">
                        <img id="LogoPreview"
                             src="@Model.ImageUrl"
                             alt="Logo Image" />
                    </div>
                </div>

            </div>
        </form>

    </div>
</div>

<script>
    const input = document.getElementById("logoInput");
    const preview = document.getElementById("logoPreview");

    input.addEventListener("input", function () {
        preview.src = this.value;
    });

    preview.onerror = function () {
        this.src = "/images/no-image.png";
    };
</script>
