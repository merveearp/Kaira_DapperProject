@model CreateFAQDto
@{
    ViewData["Title"] = "CreateFAQ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="mb-5">
    <h3 class="fw-bold mb-2">Yeni Soru Ekle</h3>
    <p class="text-muted mb-0">
        Sıkça sorulan sorulara yeni bir soru ve cevap ekleyin
    </p>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-4">

        <form method="post">


            <div class="mb-4">
                <label class="form-label fw-semibold">
                    Soru
                </label>
                <input asp-for="Question"
                       class="form-control form-control-lg"
                       placeholder="Örn: Kargo süresi ne kadar?" />
            </div>


            <div class="mb-4">
                <label class="form-label fw-semibold">
                    Cevap
                </label>
                <textarea asp-for="Answer"
                          class="form-control"
                          rows="4"
                          placeholder="Bu soruya verilecek detaylı cevap">
                </textarea>
            </div>

            <div class="d-flex justify-content-end gap-2 pt-2">
                <a href="/Admin/FAQ/Index"
                   class="btn btn-light-danger px-4">
                    İptal
                </a>
                <button type="submit"
                        class="btn btn-light-primary px-4">
                    Kaydet
                </button>
            </div>

        </form>

    </div>
</div>
