@model List<ResultServiceDto>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-0">Servisler</h2>
    <br />
    <a href="/Admin/Service/CreateService"
       class="btn btn-sm btn-dark">
        Yeni Servis Ekle
    </a>
</div>

<div class="row g-4">

    @foreach (var item in Model)
    {
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="service-card h-100">


                <div class="service-icon">
                    <i class="@item.Icon"></i>
                </div>

                <h5 class="fw-bold mb-2 text-center">
                    @item.Title
                </h5>

                <p class="text-muted text-center mb-3">
                    @(item.Description.Length > 100
                                    ? item.Description.Substring(0, 100) + "..."
                                    : item.Description)
                </p>

                <div class="d-flex justify-content-center gap-2 mt-auto">
                    <a href="/Admin/Service/UpdateService/@item.ServiceId"
                       class="btn btn-sm btn-light-warning">
                        Düzenle
                    </a>

                    <a href="/Admin/Service/DeleteService/@item.ServiceId"
                       class="btn btn-sm btn-outline-danger"
                       onclick="return confirm('Silmek istediğinize emin misiniz?')">
                        Sil
                    </a>
                </div>

            </div>
        </div>
    }

</div>
